/* pages/myself/myself.wxss */
@import '../../dist/icon.wxss';  
@import '../../dist/main.wxss'; 

page{
    background: #eeeeee;
}
.content,.my-advice,.history,.return-back,.reservation,.advice{
    flex-direction:column;
    height:calc(100% - 220rpx);
}
.head{
    display:flex;
    flex-direction: row;
    justify-content:space-between;
    background-color:#009688;
    padding:18rpx 21rpx;
}
.head-icon{
    color:white;
    font-size:43rpx;
}
.user-head{
    font-size:32rpx;
    color:white;
    line-height:56rpx;
}
.user-info{
    display: flex;
    flex-direction:row;
    justify-content:center;
    background-color:white;
}
.photo{
    height:181rpx;
    width:181rpx;
    padding:18rpx 0;
    border-radius:50%;
}
.user-text{
    padding:72rpx 0 72rpx 63rpx;
    width:420rpx;
}
#username{
    padding-bottom:9rpx;
    font-size:40rpx;
}
#score{
    color: #aaaaaa;
    font-size:28rpx;
}
.book-info{
    color: #aaaaaa;
    font-size:32rpx;
}
.user-book{
    display:flex;
    flex-direction:row;
    justify-content:space-around;
    background-color:white;
}
.book{
    text-align:center;
}
#borrow-num,#reservation-num,#limit-num{
    font-size:36rpx;
    padding:18rpx 0 27rpx 0;
}
.menu{
    margin-top:18rpx;
    background-color: white;
}
.menu-list{
    display:flex;
    flex-direction: row;
    border-bottom:#eeeeee solid 1rpx;
    justify-content: space-between;
    margin:0 18rpx 0 18rpx;
}
#history,#turn-back,#reservation,#advice,#my_advice{
    padding:27rpx;
    font-size:32rpx;
}
.fa-angle-right{
    font-size:43rpx !important;
    padding:27rpx !important;
}
.footer{
    position:absolute;
    bottom:0;
    width:100%;
}
.footer-menu{
    position:relative;
    display:flex;
    flex-direction:row;
    justify-content:space-around;
    background-color: white;
}
.footer-icon{
    color:#009688;
    padding:27rpx;
    font-size:43rpx;
}
.book-photo{
    width:144rpx;
    height:144rpx;
    padding:18rpx 18rpx;
    border-radius: 50%;
    display:inline-block;
}
.book-text{
    padding-top:18rpx;
}
.confirm-btn{
    margin:18rpx 0 18rpx 163rpx;
    padding:9rpx 18rpx;
    background-color:#FFC107;
    border-radius: 0.2em;
    text-align:center;
}
.area-mark{
    padding:18rpx;
    background-color: white;
}
.mark{
    padding:9rpx;
}
.area{
    width:100%;
    height:181rpx;
    margin-top:18rpx;
    border:1rpx #a9a9aa solid;
}
.book-head{
    display:flex;
    justify-content:space-between;
}
.list-info{
    background-color: white;
    margin-top:18rpx;
}
.photo-info{
    display:flex;
    border-bottom: solid 1rpx #eeeeee;
}
.book-name{
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
    width:362rpx;
    display:inline-block;
    vertical-align:top;
    padding:50rpx 0 10rpx 0;
    font-size:28rpx;
}
.book-status{
    font-size:24rpx;
    color:#808080;
}
.book-extra{
    display:flex;
    justify-content:flex-end;
}
.book-time{
    color:#808080;
    padding:5rpx 0;
    font-size:24rpx;
}
.advice-btn,.reservation-btn,.confirm-btn{
    margin:9rpx;
    padding:5rpx 18rpx;
    background-color:#FFC107;
    border-radius: 0.2em;
    text-align:center;
    color:white;
    font-size:28rpx;
}
.disp-flex{
    flex-direction:column;
}
.contact{
  padding:14rpx 0;
  font-size:32rpx;
  line-height:68rpx;
}