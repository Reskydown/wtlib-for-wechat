/* pages/storage/storage.wxss */
@import '../../dist/icon.wxss';  
@import '../../dist/main.wxss'; 
page{
    background: #eeeeee;
}
.head{
    background-color:#009688;
    padding:27rpx 21rpx;
    text-align:center;
}
.head-icon{
    color:white;
    font-size:43rpx;
    line-height: 54rpx;
    float:right;
}
.footer{
    position:absolute;
    bottom:0;
    width:100%;
}
.footer-menu{
    position:relative;
    display:flex;
    flex-direction:row;
    justify-content:space-around;
    background-color: white;
}
.footer-icon{
    color:#009688;
    padding:27rpx;
    font-size:43rpx;
}
.user-head{
    font-size:32rpx;
    color:white;
    line-height:32rpx;
}
.book-info{
    display:flex;
    background-color: white;
    border-bottom:1rpx solid #eeeeee;
    justify-content: space-between;
}
#submit{
    margin:18rpx;
    padding:9rpx 27rpx;
    background-color:#FFC107;
    border-radius: 0.2em;
}
.btn-div{
    display:inherit
}
.check-div{
    margin:27rpx;
}
.check-all{
    padding-left:36rpx;
}
#total{
    margin:27rpx 0;
}

/*每行单元格*/
.carts-item {
	display: flex;
	flex-direction: row;
	height:150rpx;
	/*width属性解决标题文字太短而缩略图偏移*/
	width:100%;
	border-bottom: 1rpx solid #eee;
	padding: 30rpx 30rpx;
	margin-right: 40rpx;
	background: white;
}

/*item与button的容器*/
.carts-container {
	position: relative;
	width: 100%;
	height: 163rpx;
}

/*左部图片*/
.carts-image {
	width:150rpx;
	height:150rpx;
}


/*右部描述*/
.carts-text {
	margin-left:40rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

/*右上部分标题*/
.carts-title {
	font-size: 28rpx;
	color: #444;
	line-height: 38rpx;
	overflow: hidden;  
	text-overflow: ellipsis; 
	display: -webkit-box;  
	-webkit-line-clamp: 2;  
	-webkit-box-orient: vertical; 
}

/*商品加减按钮*/
/*stepper容器*/
.stepper {
	border: 1rpx solid #ccc;
	border-radius: 5rpx;
	width: 126rpx;
	height: 50rpx;
	margin-left:300rpx;
}


/*加号与减号*/
.stepper text {
	width: 34rpx;
	line-height: 47rpx;
	text-align: center;
	float: left;
}

/*数值*/
.stepper input {
	color: black;
	float: left;
	margin: 0 auto;
	width: 54rpx;
	height: 47rpx;
	text-align: center;
	font-size: 21rpx;
	border-left: 1rpx solid #ccc;
	border-right: 1rpx solid #ccc;
}

/*普通样式*/
.stepper .normal{
	color: black;
}

/*禁用样式*/
.stepper .disabled{
	color: #ccc;
}

.carts-list{
	height:calc(100% - 310rpx);
}

/*复选框样式*/
.carts-list icon {
	margin-top: 60rpx;
	margin-right: 20rpx;
}

.select-and-amount {
	display: flex;
	flex-direction: row;
	align-items: center;
}