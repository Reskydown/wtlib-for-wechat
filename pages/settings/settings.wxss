@import '../../dist/icon.wxss';  
@import '../../dist/main.wxss'; 

body{
    background: #eeeeee;
}
.input-box input{
    background: none;
    border:0;
    border-radius:0;
    font-size:20px;
    padding:4px;
    width:100%
}
.head{
    background-color:#009688;
    padding:15px 12px;
    text-align:center;
}
.head-icon{
    color:white;
    font-size:24px;
    line-height: 30px;
    float:right;
}
.footer{
    position:absolute;
    bottom:0;
    width:100%;
}
.footer-menu{
    position:relative;
    display:flex;
    flex-direction:row;
    justify-content:space-around;
    background-color: white;
}
.footer-icon{
    color:#009688;
    padding:15px;
    font-size:24px;
}
.head{
    display:flex;
    flex-direction: row;
    justify-content:space-between;
    background-color:#009688;
    padding:15px 12px;
}
.head-icon{
    color:white;
    font-size:24px;
}
.user-head{
    font-size:18px;
    color:white;
    line-height:31px;
}
.radio{
    font-size:14px;
}
.content{
    height:calc(100% - 220rpx);
    padding:15px;
    background-color: white;
    box-shadow:0 2px 2px #ddd;
}
.photo{
    height:181rpx;
    width:181rpx;
    padding:18rpx 0;
    margin:0 auto;
    border-radius:50%;
    display:flex;
    flex-direction:row;
    justify-content:center;
}
.photo img {
    width:100px;
    padding:15px;
    height:100px;
    border-radius:50%;
}
.text{
    padding-top:14px;
    font-size: 14px;
    color:#808080;
}
.input-box{
    border-bottom:1px solid #cccccc;
}
.radio-div{
    display:flex;
    flex-direction:row;
    padding-top:14px;
}
.sex{
    margin-right:30px;
    line-height: 30px;
}